<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_timetable_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_timetable_date1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_timetable_date1"
        android:layout_below="@+id/tv_timetable_date1"
        android:gravity="center"
        android:text="To" />

    <TextView
        android:id="@+id/tv_timetable_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_timetable_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_timetable_date1"
        android:layout_toRightOf="@+id/tv_timetable_date1"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_timetable_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_timetable_subject"
        android:layout_alignStart="@+id/tv_timetable_subject"
        android:layout_below="@+id/tv_timetable_subject"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_timetable_teacher"
        android:layout_marginTop="10dp"
        android:background="#BEBEBE" />

</RelativeLayout>